<%- include('./partials/header') %>
<div class="w-full min-h-screen flex items-center justify-center">
    <form class="bg-white p-8 rounded shadow-md w-96" action="/admin/edit/<%= product._id %>" method="post" enctype="multipart/form-data">
        <h2 class="text-2xl mb-4">Edit Product</h2>
        <input type="text" name="name" value="<%= product.name %>" placeholder="Name" class="mb-2 w-full border p-2" required>
        <input type="number" name="price" value="<%= product.price %>" placeholder="Price" class="mb-2 w-full border p-2" required>
        <input type="number" name="discount" value="<%= product.discount %>" placeholder="Discount" class="mb-2 w-full border p-2">
        <input type="text" name="bgcolor" value="<%= product.bgcolor %>" placeholder="Background Color" class="mb-2 w-full border p-2">
        <input type="text" name="panelcolor" value="<%= product.panelcolor %>" placeholder="Panel Color" class="mb-2 w-full border p-2">
        <input type="text" name="textcolor" value="<%= product.textcolor %>" placeholder="Text Color" class="mb-2 w-full border p-2">
        <input type="file" name="image" class="mb-2 w-full">
        <% if (product.image) { %>
            <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" class="mb-2 w-24 h-24 object-contain" />
        <% } %>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Update Product</button>
    </form>
</div>
<%- include('./partials/footer') %>